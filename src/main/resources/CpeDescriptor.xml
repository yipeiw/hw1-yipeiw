<?xml version="1.0" encoding="UTF-8"?>
<cpeDescription xmlns="http://uima.apache.org/resourceSpecifier">
	<collectionReader>
		<collectionIterator>
			<descriptor>
				<import location="collectionReaderDescriptor.xml" />
			</descriptor>
			<configurationParameterSettings>
				<nameValuePair>
					<name>Input</name>
					<value>
						<string>src/main/resources/data/sample.in</string>
					</value>
				</nameValuePair>
			</configurationParameterSettings>
		</collectionIterator>
	</collectionReader>

	<casProcessors casPoolSize="3" processingUnitThreadCount="1">
		<casProcessor deployment="integrated" name="GenAnnotatorDescriptor">
			<descriptor>
				<import location="RulePOSAnnotatorDescriptor.xml" />
			</descriptor>
			<filter></filter>
			<errorHandling>
				<errorRateThreshold action="terminate" value="100/1000" />
				<maxConsecutiveRestarts action="terminate"
					value="30" />
				<timeout max="100000" />
			</errorHandling>
			<checkpoint batch="10000" />
		</casProcessor>
		<casProcessor deployment="integrated" name="OutputConsumerDescriptor">
			<descriptor>
				<import location="OutputConsumerDescriptor.xml" />
			</descriptor>
			<configurationParameterSettings>
				<nameValuePair>
					<name>Output</name>
					<value>
						<string>src/main/resources/data/sample.result</string>
					</value>
				</nameValuePair>
			</configurationParameterSettings>

			<filter></filter>
			<errorHandling>
				<errorRateThreshold action="terminate" value="100/1000" />
				<maxConsecutiveRestarts action="terminate"
					value="30" />
				<timeout max="100000" />
			</errorHandling>
			<checkpoint batch="10000" />
		</casProcessor>
	</casProcessors>

	<cpeConfig>
		<numToProcess>600</numToProcess>
		<deployAs>immediate</deployAs>
	</cpeConfig>
</cpeDescription>